<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Guest.CreateAccount">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sky">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:hint="@string/Email"
            android:textColorHint="@color/white"
            app:boxStrokeColor="@color/white"
            app:boxStrokeWidth="3dp"
            app:boxStrokeWidthFocused="3dp"
            app:counterEnabled="false"
            app:counterOverflowTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:counterTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:counterTextColor="@color/white"
            app:endIconMode="clear_text"
            app:endIconTint="@color/white"
            app:helperTextTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:helperTextTextColor="@color/red"
            app:hintTextColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/TextInputLayoutLastName"
            app:layout_constraintStart_toStartOf="@+id/TextInputLayoutFirstName"
            app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutFirstName"
            app:startIconDrawable="@drawable/email"
            app:startIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TextInputEditTextInputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:inputType="textEmailAddress"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:gravity="start"
            android:hint="@string/Password"
            android:textColorHint="@color/white"
            app:boxStrokeColor="@color/white"
            app:boxStrokeWidth="3dp"
            app:boxStrokeWidthFocused="3dp"
            app:counterEnabled="false"
            app:counterOverflowTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:counterTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:counterTextColor="@color/white"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/white"
            app:helperTextTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:helperTextTextColor="@color/red"
            app:hintTextColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/TextInputLayoutPasswordConfirm"
            app:layout_constraintEnd_toEndOf="@+id/TextInputLayoutFirstName"
            app:layout_constraintStart_toStartOf="@+id/TextInputLayoutFirstName"
            app:layout_constraintTop_toTopOf="@+id/TextInputLayoutPasswordConfirm"
            app:startIconDrawable="@drawable/lock"
            app:startIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TextInputEditTextInputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:inputType="textPassword"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutPasswordConfirm"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:hint="@string/ConfirmPassword"
            android:textColorHint="@color/white"
            app:boxStrokeColor="@color/white"
            app:boxStrokeWidth="3dp"
            app:boxStrokeWidthFocused="3dp"
            app:counterEnabled="false"
            app:counterOverflowTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:counterTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:counterTextColor="@color/white"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/white"
            app:helperTextTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:helperTextTextColor="@color/red"
            app:hintTextColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/TextInputLayoutLastName"
            app:layout_constraintStart_toStartOf="@+id/TextInputLayoutLastName"
            app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutEmail"
            app:startIconDrawable="@drawable/lock"
            app:startIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TextInputEditTextInputPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:inputType="textPassword"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutFirstName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="140dp"
            android:layout_marginRight="8dp"
            android:gravity="start"
            android:hint="@string/FirstName"
            android:textColorHint="@color/white"
            app:boxStrokeColor="@color/white"
            app:boxStrokeWidth="3dp"
            app:boxStrokeWidthFocused="3dp"
            app:counterEnabled="false"
            app:counterOverflowTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:counterTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:counterTextColor="@color/white"
            app:endIconMode="clear_text"
            app:endIconTint="@color/white"
            app:helperTextTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:helperTextTextColor="@color/red"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
            app:hintTextColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/TextInputLayoutLastName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include"
            app:startIconDrawable="@drawable/person"
            app:startIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TextInputEditTextInputFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:inputType="textPersonName"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayoutLastName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="start"
            android:hint="@string/LastName"
            android:textColorHint="@color/white"
            app:boxStrokeColor="@color/white"
            app:boxStrokeWidth="3dp"
            app:boxStrokeWidthFocused="3dp"
            app:counterEnabled="false"
            app:counterOverflowTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:counterTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:counterTextColor="@color/white"
            app:endIconMode="clear_text"
            app:endIconTint="@color/white"
            app:helperTextTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:helperTextTextColor="@color/red"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
            app:hintTextColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/TextInputLayoutFirstName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/TextInputLayoutFirstName"
            app:layout_constraintTop_toTopOf="@+id/TextInputLayoutFirstName"
            app:startIconDrawable="@drawable/person"
            app:startIconTint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TextInputEditTextInputLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:inputType="textPersonName"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/ButtonNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_background"
            android:text="@string/Next"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/blue"
            app:layout_constraintEnd_toEndOf="@+id/TextInputLayoutPasswordConfirm"
            app:layout_constraintStart_toStartOf="@+id/TextInputLayoutPassword"
            app:layout_constraintTop_toBottomOf="@+id/TextInputLayoutPasswordConfirm" />

        <TextView
            android:id="@+id/SignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/AlreadyHaveAccount"
            android:textColor="@color/yellow"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ButtonNext"
            app:layout_constraintStart_toStartOf="@+id/ButtonNext"
            app:layout_constraintTop_toBottomOf="@+id/ButtonNext" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/GuestNavView"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:itemBackground="@drawable/drawer_list_selector"
        app:headerLayout="@layout/guest_nav_header"
        app:menu="@menu/guest_menu" />

</androidx.drawerlayout.widget.DrawerLayout>