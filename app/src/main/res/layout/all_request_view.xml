<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MyRequestView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:clickable="true">

    <TextView
        android:id="@+id/Request"
        style="@style/Custom_TextView_Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:padding="1dp"
        android:textSize="22dp"
        android:text="Request: Other"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FullName"
        style="@style/Custom_TextView_Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name: test test"
        android:padding="1dp"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/Request"
        app:layout_constraintTop_toBottomOf="@+id/Request" />

    <TextView
        android:id="@+id/Email"
        style="@style/Custom_TextView_Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:text="Email: test@test.com"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/Request"
        app:layout_constraintTop_toBottomOf="@+id/FullName" />

    <TextView
        android:id="@+id/UserType"
        style="@style/Custom_TextView_Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:text="User Type: Student"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/Request"
        app:layout_constraintTop_toBottomOf="@+id/Email" />

    <TextView
        android:id="@+id/Details"
        style="@style/Custom_TextView_Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:text="Details: i want to be teacher"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/Request"
        app:layout_constraintTop_toBottomOf="@+id/UserType" />

    <TextView
        android:id="@+id/Reason"
        style="@style/Custom_TextView_Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:text="Answer: No"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/Details"
        app:layout_constraintTop_toBottomOf="@+id/Details" />

    <TextView
        android:id="@+id/Status"
        style="@style/Custom_TextView_Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:text="Status: pending"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/Details"
        app:layout_constraintTop_toBottomOf="@+id/Reason" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:paddingTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Status" />

</androidx.constraintlayout.widget.ConstraintLayout>