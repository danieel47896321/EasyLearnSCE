<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Request"
                style="@style/TextView_Style_Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:padding="1dp"
                android:textSize="22dp"
                android:text="Request: Other"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/FullName"
                style="@style/TextView_Style_Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name: test test"
                android:padding="1dp"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="@+id/Request"
                app:layout_constraintTop_toBottomOf="@+id/Request" />

            <TextView
                android:id="@+id/Email"
                style="@style/TextView_Style_Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Email: test@test.com"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="@+id/Request"
                app:layout_constraintTop_toBottomOf="@+id/FullName" />

            <TextView
                android:id="@+id/UserType"
                style="@style/TextView_Style_Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="User Type: Student"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="@+id/Request"
                app:layout_constraintTop_toBottomOf="@+id/Email" />

            <TextView
                android:id="@+id/Details"
                style="@style/TextView_Style_Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Details: i want to be teacher"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="@+id/Request"
                app:layout_constraintTop_toBottomOf="@+id/UserType" />

            <TextView
                android:id="@+id/Reason"
                style="@style/TextView_Style_Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Answer: No"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="@+id/Details"
                app:layout_constraintTop_toBottomOf="@+id/Details" />

            <TextView
                android:id="@+id/Status"
                style="@style/TextView_Style_Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:text="Status: pending"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="@+id/Details"
                app:layout_constraintTop_toBottomOf="@+id/Reason" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>