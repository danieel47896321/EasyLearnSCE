<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="myAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <item name="textInputStyle">@style/Custom_TextInputLayout</item>
    </style>
    <style name="Custom_TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:gravity">start</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="startIconTint">@color/white</item>
        <item name="endIconTint">@color/white</item>
    </style>
    <style name="Custom_TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Custom_Button" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
    <style name="Custom_TextView_Big" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Custom_TextView_Normal" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/yellow</item>
    </style>


    <style name="Custom_Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textColor">@color/sky</item>
    </style>
    <style name="MenuItemStyle">
        <item name="android:itemBackground">@color/PickColor</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
        <item name="android:background">@color/sky</item>
        <item name="android:text">@color/white</item>
        <item name="title">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>