<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easylearnsce">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <queries>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@drawable/openingscreen"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyLearnSCE"
        android:usesCleartextTraffic="true">
        <activity android:name=".Client.User.GenericYouTubePlayer" android:exported="true" />
        <activity android:name=".Client.User.AllRequests" android:exported="true"/>
        <activity android:name=".Client.User.Requests" android:exported="true"/>
        <activity android:name=".Client.User.Message" android:exported="true"/>
        <activity android:name=".Client.User.EasyLearnChat" android:exported="true"/>
        <activity android:name=".Client.User.Profile" android:exported="true"/>
        <activity android:name=".Client.User.GenericCourse" android:exported="true"/>
        <activity android:name=".Client.User.ChangePassword" android:exported="true"/>
        <activity android:name=".Client.User.GenericEngineering" android:exported="true"/>
        <activity android:name=".Client.User.SelectEngineering" android:exported="true"/>
        <activity android:name=".Client.User.Home" android:exported="true"/>
        <activity android:name=".Client.Guest.EasyLearnSCE" android:exported="true"/>
        <activity android:name=".Client.Guest.Contact" android:exported="true"/>
        <activity android:name=".Client.Guest.About" android:exported="true"/>
        <activity android:name=".Client.Guest.CreateAccount" android:exported="true"/>
        <activity android:name=".Client.Guest.SignIn" android:exported="true"/>
        <activity android:name=".Client.Guest.ResetPassword" android:exported="true"/>
        <activity android:name=".Client.Guest.OpenScreen" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>