<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easylearnsce">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/openingscreen"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyLearnSCE">
        <activity android:name=".User.Message"></activity>
        <activity android:name=".User.EasyLearnChat" />
        <activity
            android:name=".User.Profile"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".SelectFunc.GenericCourse" />
        <activity android:name=".User.ChangePassword" />
        <activity android:name=".SelectFunc.Lecture" />
        <activity android:name=".SelectFunc.GenericEngineering" />
        <activity android:name=".User.SelectEngineering" />
        <activity android:name=".User.Home" />
        <activity android:name=".Guest.EasyLearnSCE" />
        <activity android:name=".Guest.Contact" />
        <activity android:name=".Guest.About" />
        <activity android:name=".Guest.CreateAccount" />
        <activity android:name=".Guest.SignIn" />
        <activity android:name=".Guest.ResetPassword" />
        <activity android:name=".OpeningScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>